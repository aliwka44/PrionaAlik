@model List<GetSliderAdminVM>
<h5 class="card-title fw-semibold mb-4">Slider</h5>
<a asp-action="Create" class="btn btn-outline-success m-1 float-end mb-2 ">Create</a>
<div class="table-responsive w-100">
    <table class="table table-bordered text-nowrap mb-0 align-middle">
        <thead class="text-dark fs-4">
            <tr>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Id</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Image</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Title</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Subtitle</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Discount</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">CreateTime</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">UpdateTime</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Visiblity</h6>
                </th>
                <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Action</h6>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var data in Model)
            {
                <tr>
                    <td class="border-bottom-0">
                        @data.Id
                    </td>
                    <td class="border-bottom-0">
                        <img src="@data.ImageUrl" width="50"/>
                    </td>
                    <td class="border-bottom-0">
                        @data.Title
                    </td>
                    <td class="border-bottom-0">
                        @data.Subtitle
                    </td>
                    <td class="border-bottom-0">
                        @data.Discount
                    </td>
                    <td class="border-bottom-0">
                        @data.CreateTime
                    </td>
                    <td class="border-bottom-0">
                        @data.UpdateTime
                    </td>
                    <td>
                        <div class="form-check form-switch">
                            <input class="form-check-input" style="width:3.5em; height:1.75em" slider-id="@data.Id" type="checkbox"  checked="!@data.IsDeleted">
                            @* <label class="form-check-label" for="flexSwitchCheckChecked">Status</label> *@
                            @* <a asp-action="SoftDelete" asp-route-id="@data.Id" class="btn btn-primary">@(data.IsDeleted ? "Göstər" : "Gizlət")</a> *@

                        </div>
                    </td>
                    <td class="border-bottom-0">
                        <a asp-action="Update" asp-route-id="@data.Id" class="btn btn-waring">Edit</a>
                        <a asp-action="Delete" asp-route-id="@data.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section styles{
    
}
