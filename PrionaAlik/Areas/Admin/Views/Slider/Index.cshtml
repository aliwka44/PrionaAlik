    <script>
        let input = document.getElementsByClassName("change-visiblity");
        inputs.forEach(i=>{
            i.addEventListener("change", () => {
                fetch("http://localhost:5153/Admin/Slider/ChangeVisiblity/" + i.getAttribute("slider-id").then(res => {
                    if (res.status == 200) {
                        alert("Status deyisdirildi")
                    }
                    else {
                        alert("Bir problem oldu")
                    }).catch(err => consle.log(err))

                alert();
            });
        })
        fetch("http://localhost:5153/Admin/Slider/ChangeVisiblity/100").then(res => consle.log()).catch(err => consle.log(err))
    </script>
}